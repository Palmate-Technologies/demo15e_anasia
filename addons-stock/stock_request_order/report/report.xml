<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_request_order" model="ir.actions.report">
            <field name="name">Request Order</field>
            <field name="model">request.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">stock_request_order.report_request_order</field>
            <field name="report_file">stock_request_order.report_request_order</field>
            <field name="print_report_name">('Req-order-%s' % (object.name))</field>
<!--            <field name="binding_model_id" ref="model_request_order"/>-->
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
        </record>

<!--        summary,  high level rort-->
        <record id="action_report_request_order_amounts" model="ir.actions.report">
            <field name="name">Request Order Summary</field>
            <field name="model">request.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">stock_request_order.report_request_order_amounts</field>
            <field name="report_file">stock_request_order.report_request_order_amounts</field>
            <field name="print_report_name">('Req-summary')</field>
            <field name="binding_model_id" ref="model_request_order"/>
            <field name="binding_type">report</field>
        </record>

    </data>
</odoo>
