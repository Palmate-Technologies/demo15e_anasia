<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="show_stock_wizard_form" model="ir.ui.view">
        <field name="name">show.stock.wizard.form</field>
        <field name="model">show.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="Available stock">
                <field name="out_of_stock" invisible="1"/>
                <group attrs="{'invisible':[('out_of_stock','=',True)]}">
                    <field name="wizard_lines" nolabel="1" readonly="1">
                        <tree editable="bottom" create="0" edit="0" delete="0">
                            <field name="location_id"/>
                            <field name="quantity"/>
                            <field name="uom_id"/>
                        </tree>
                        <form create="0" edit="0" delete="0">
                            <group>
                                <group>
                                    <field name="location_id"/>
                                </group>
                                <group>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                </group>
                            </group>
                            <footer>
                                <button string="Close" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                            </footer>
                        </form>
                    </field>
                </group>
                <separator string="Out of stock in all locations!" attrs="{'invisible':[('out_of_stock','!=',True)]}"/>
                <footer>
                    <button string="Close" class="btn btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>