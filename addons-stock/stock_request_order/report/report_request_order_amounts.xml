<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_request_order_amounts_document">
    <t t-call="web.external_layout">
        <div class="page">
            <div class="oe_structure"/>

            <div class="text-center">
                <h5>
                    <strong>Request Order Summary Report</strong>
                </h5>
            </div>
            <table class="table table-sm o_main_table">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_req_order" class="text-left">Request Order</th>
                        <th name="th_requester" class="text-left">Requester</th>
                        <th name="th_date" class="text-left">Date</th>
                        <th name="th_journal" class="text-left">Payment Journal</th>
                        <th name="th_pr_amount" class="text-right">PR Amount</th>
                        <th name="th_paid" class="text-right">Paid Amount</th>
                        <th name="th_balance" class="text-right">Balance Amount</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <t t-foreach="docs.filtered(lambda l: l.acquire_method=='purchase_order')" t-as="doc">
                        <tr>
                            <td name="td_name" class="text-left">
                                <span t-field="doc.name"/>
                            </td>
                            <td name="td_requester" class="text-left">
                                <span t-field="doc.requester_user_id"/>
                            </td>
                            <td name="td_date" class="text-left">
                                <span t-field="doc.request_date" t-options='{"format": "MM/dd/yyyy"}'/>
                            </td>
                            <td name="td_name" class="text-left">
                                <span t-field="doc.payment_journal_id"/>
                            </td>
                            <td name="td_amount_total" class="text-right">
                                <span t-field="doc.amount_total"/>
                            </td>
                            <td name="td_amount_paid" class="text-right">
                                <t t-set="paid_amount" t-value="doc._get_amount_paid()"/>
                                <span t-esc="paid_amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                            <td name="td_amount_balance" class="text-right">
                                <span t-esc="doc.amount_total - paid_amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

        </div>
    </t>
</template>


<template id="report_request_order_amounts">
    <t t-call="web.html_container">
        <t t-call="stock_request_order.report_request_order_amounts_document"/>
<!--        <t t-foreach="docs" t-as="doc">-->
<!--            <t t-call="stock_request_order.report_request_order_document"/>-->
<!--        </t>-->
    </t>
</template>

</odoo>
