<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_create_purchase_order_form" model="ir.ui.view">
        <field name="name">view.create.purchase.order.form</field>
        <field name="model">create.purchase.order</field>
        <field name="arch" type="xml">
            <form string="Purchases">
                <field name="name" invisible="1"/>
                <field name="line_ids" nolabel="1">
                    <tree editable="bottom">
                        <field name="request_line_id" invisible="1"/>
                        <field name="product_id"/>
                        <field name="partner_id"/>
                        <field name="qty"/>
                        <field name="uom_id"/>
                    </tree>
                </field>

                <footer>
                    <button name="process" string="Apply" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
