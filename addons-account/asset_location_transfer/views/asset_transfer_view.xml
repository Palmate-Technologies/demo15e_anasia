<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="asset_transfer_tree" model="ir.ui.view">
        <field name="name">asset.transfer.tree</field>
        <field name="model">asset.transfer</field>
        <field name="arch" type="xml">
            <tree string="Asset Transfer">
                <field name="name"/>
                <field name="asset_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="create_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="asset_transfer_form" model="ir.ui.view">
        <field name="name">asset.transfer.form</field>
        <field name="model">asset.transfer</field>
        <field name="arch" type="xml">
            <form string="Asset Transfer">
                <header>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn_primary" states="draft"/>
                    <button name="set_to_draft" string="Set as Draft" states="cancel" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="asset_id" attrs="{'readonly':[('state','=','done')]}"/>
                            <field name="location_id" force_save="1"/>
                            <field name="location_dest_id"/>
                        </group>
                        <group>
                            <field name="create_date"/>
                        </group>
                        <label for="reason"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="asset_transfer_search" model="ir.ui.view">
        <field name="name">asset.transfer.search</field>
        <field name="model">asset.transfer</field>
        <field name="arch" type="xml">
            <search string="Search Asset Transfer">
                <field name="name" string="Name"
                       filter_domain="['|', ('name', 'ilike', self),('asset_id', 'ilike', self)]"/>
                <field name="asset_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="create_date"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <record id="action_asset_transfer" model="ir.actions.act_window">
        <field name="name">Asset Transfer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.transfer</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <menuitem id="asset_transfer_custom" name="Asset Transfer" action="action_asset_transfer"
              parent="account.menu_finance_entries_management"
              sequence="3"/>


</odoo>
