<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_asset_form_location" model="ir.ui.view">
        <field name="name">view.account.asset.form.location</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form"/>
        <field name="arch" type="xml">
            <field name="analytic_tag_ids" position="after">
                <field name="location_id"/>
            </field>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="action_view_transfer"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o">
                    <field name="transfer_count" widget="statinfo" string="Transfer"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>