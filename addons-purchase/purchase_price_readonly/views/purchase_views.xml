<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_readonly_unitprice" model="ir.ui.view">
        <field name="name">purchase.order.readonly.unitprice</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
                <field name="price_unit_readonly" invisible="1"/>
            </xpath>
            <field name="price_unit" position="attributes">
                <attribute name="attrs">{'readonly': [('price_unit_readonly', '=', True)]}</attribute>
            </field>

        </field>
    </record>


</odoo>