<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_line_tree_inherit" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="product_category_id"/>
            </field>
        </field>
    </record>

    <record id="account_move_line_form_inherit" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="product_category_id"/>
            </field>
        </field>
    </record>

    <record id="account_move_line_filter_inherit" model="ir.ui.view">
        <field name="name">account.move.line.filter.inherit</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_account_move_line_filter"/>
        <field name="arch" type="xml">
            <group expand="0" string="Group By">
                <filter string="Product Category" name="product_category_id" context="{'group_by':'product_category_id'}"/>
            </group>

        </field>
    </record>
            
</odoo>